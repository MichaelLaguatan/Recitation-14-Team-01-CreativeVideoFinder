<%- include ('../partials/header') %>

<main>
  <div class="container">

    <div class="col"><%- include ('../partials/message') %></div>
    <h2>Welcome Home</h2>
    <form id="form"> 
      <input type="search" id="query" name="q" placeholder="Find Creative videos...">
      <button>Search</button>
    </form>
    <h5>Video results displayed below...</h5>
    <h1>JavaScript Tutorials</h1>
    <ul>
        <% for(var i = 0; i < result.length; i++) { %>
          <li>
            <h2><%= result[i].snippet.title %></h2>
            <p><%= result[i].snippet.description %></p>
            <a href="https://www.youtube.com/watch?v=<%= result[i].id.videoId %>">Watch on YouTube</a>
            <iframe  src="https://www.youtube.com/embed/<%= result[i].id.videoId %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
          </li>
        <% } %>
    </ul>
  </div>
</main>

<%- include ('../partials/footer') %>