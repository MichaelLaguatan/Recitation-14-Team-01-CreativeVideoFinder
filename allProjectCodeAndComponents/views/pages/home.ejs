<%- include ('../partials/header') %>

<main>
  <div class="container">

    <div class="col"><%- include ('../partials/message') %></div>
    <h2>Welcome Home</h2>
    
    <form action="/home" method="POST">
      <input type="search" id="query" name="q" placeholder="Find Creative videos...">
      <button>Search</button>
    </form>
    <h5>Video results displayed below...</h5>
    <div class="container-fluid">
      <div class="row">
        <% for(var i = 0; i < result.length; i++) { %>
        <div class="col-md-3">
          <div class="card">
            <% if(result[i].platform == 'youtube') {%>
              <a href="https://www.youtube.com/watch?v=<%= result[i].id %>">Watch on YouTube</a>
              <iframe  height = "300px" src="https://www.youtube.com/embed/<%= result[i].id %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
              <%}%>
              <% if(result[i].platform == 'vimeo') {%>
                <a href="<%= result[i].url %>">Watch on Vimeo</a>
                <iframe height = "300px" src="https://player.vimeo.com/video/<%= result[i].id.split("/")[2] %>"  height="300" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>

              <%}%>
            <div class="card-body">
              <h5 class="card-title"><%= result[i].title %></h5>
              <p class="card-text"><%= result[i].description %></p>
              <form action="/details" method = "POST">
                
                <button  class="btn btn-primary" name = "b" value = "<%= result[i]%>">
                  "<%= result[i] %>"
                </button>
            </form>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>



  </div>
</main>

<style>
  .card {
    position: relative;
    height:300px; 
  }
  .card .card-body {
    pointer-events: none;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    color: #fff;
    padding: 20px;
    background-color: rgba(0, 0, 0, 0.5);
  }
  .card .btn {
    pointer-events: all;
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
  }
</style>
<%- include ('../partials/footer') %>